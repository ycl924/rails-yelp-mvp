<h1>Restaurants#show</h1>
<p>Find me in app/views/restaurants/show.html.erb</p>
<h1>Name:
  <%= @restaurant.name %>
</h1>
<h3>Category:
  <%= @restaurant.category.capitalize %>
</h3>
<p>Address:
  <%= @restaurant.address %>
</p>
<p>Phone number:
  <%= @restaurant.phone_number %>
</p>
<p>Reviews:  <%= link_to "Add Review", new_restaurant_review_path(@restaurant), {class: "btn-danger"}  %> </p>
<% @reviews.each_with_index do |review, i|  %>
<p> No.
  <%= i + 1 %> :
  <%=  review.content %>
</p>
<p> Rating:
  <%= "*" * review.rating %>
</p>
<% end %>
