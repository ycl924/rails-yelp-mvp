<h1>Restaurants#new</h1>
<p>Find me in app/views/restaurants/new.html.erb</p>

<%= simple_form_for @restaurant do |f| %>
  <%= f.input :name, placeholder: 'McDonalds', label: 'Name of the restaurant please', error: 'Name is mandatory, please specify one' %>
  <%= f.input :address, hint: 'No special characters.', error: 'Address is mandatory, please specify one' %>
  <%= f.input :phone_number, hint: 'Not like anybody calls anyway' %>
  <%= f.input :category, collection: ["chinese", "italian", "japanese", "french", "belgian"] %>
  <%= f.button :submit, { class: 'btn-primary' } %>
<% end %>
